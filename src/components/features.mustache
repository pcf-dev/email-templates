<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="features">
  <tr>
    <td style="padding-bottom: 24px"></td>
    <td style="padding-bottom: 24px"></td>
  </tr>
  {{#features}}
    <tr mc:repeatable class="feature">
      <td>
        <div class="feature__image">
          <img mc:edit="image" src="{{{ root }}}{{{ image }}}" width="100%" />
        </div>
        <div class="feature__text">
          <div class="feature__text-inner">
            <strong mc:edit="title" >{{ title }}</strong>
            <div mc:edit="blurb">{{ blurb }} </div>
          </div>
        </div>
      </td>
    </tr>
  {{/features}}
  <tr>
    <td style="padding-bottom: 12px"></td>
    <td style="padding-bottom: 12px"></td>
  </tr>
</table>